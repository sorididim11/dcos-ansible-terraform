
{
  "service": {
    "name": "{{item.name}}"
  },

  "security": {
    "enable": {{ item.options.is_insecure_registry | ternary('true', 'false') }},
    {% if dcos_is_insecure_registry == False %}
    "http_tls_download_ip": "{{groups['dcos_bootstrap'][0]}}",
    "http_tls_download_port": "{{ dcos_bootstrap_port }}",
    "http_tls_certificate_filename": "{{item.name}}.crt",
    "http_tls_key_filename": "{{item.name}}.key"
    {% endif %}
  },

  "storage": {
    "storage_path": "/var/lib/registry",
    "host_volume_registry": "{{ item.options.host_volume_path }}"
  }
}