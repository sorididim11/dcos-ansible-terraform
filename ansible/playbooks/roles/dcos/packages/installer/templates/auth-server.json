{
    "id": "/registry-auth",
    "instances": 1,
    "cpus": 0.2,
    "mem": 256,
    "disk": 0,
    "container": {
      "type": "DOCKER",
      "volumes": [
        {
          "containerPath": "/config",
          "hostPath": "/dcos/auth_server/config",
          "mode": "RW"
        },
        {
            "containerPath": "/ssl",
            "hostPath": "/dcos/auth_server/ssl",
            "mode": "RW"
        }
      ],
      "docker": {
        "image": "cesanta/docker_auth",
        "network": "BRIDGE",
        "portMappings": [
          {
            "containerPort": 5001,
            "hostPort": 0,
            "servicePort": 15001,
            "protocol": "tcp",
            "name": "registry",
            "labels": {
              "VIP_0": "/registry-auth:5001"
            }
          }
        ]
      }
    },
    "labels": {
      "HAPROXY_GROUP": "external"
    }
  }