
{
  "service": {
    "name": "{{dcos_registry_name}}"
  },

  "security": {
    "enable": {{ dcos_is_insecure_registry | ternary('true', 'false') }},
    {% if dcos_is_insecure_registry == False %}
    "http_tls_download_ip": "{{groups['dcos_bootstrap'][0]}}",
    "http_tls_download_port": "{{ dcos_bootstrap_port }}",
    "http_tls_certificate_filename": "domain.crt",
    "http_tls_key_filename": "domain.key"
    {% endif %}
  },

  "storage": {
    "storage_path": "/var/lib/registry",
    "host_volume_registry": "{{ dcos_host_volume_registry }}"
  }
}